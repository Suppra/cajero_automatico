{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Flutter App",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "args": [
        "--debug"
      ],
      "cwd": "${workspaceFolder}",
      "flutterMode": "debug",
      "deviceId": "flutter-tester"
    },
    {
      "name": "Run Flutter App (Release)",
      "type": "dart", 
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "release"
    },
    {
      "name": "Run Flutter App (Profile)",
      "type": "dart",
      "request": "launch", 
      "program": "lib/main.dart",
      "flutterMode": "profile"
    },
    {
      "name": "Run Flutter Web",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "chrome"
      ],
      "flutterMode": "debug"
    },
    {
      "name": "Run Tests",
      "type": "dart",
      "request": "launch",
      "program": "test/widget_test.dart",
      "flutterMode": "debug"
    }
  ]
}